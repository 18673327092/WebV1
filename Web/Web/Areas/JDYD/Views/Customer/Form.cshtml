            @Html.FormCustomizeControl(new FormControllerModel() { FieldID = 11741, FormField = new Base.Model.Sys.Model.FormFieldModel() { }, ID = ID, ClassName = "" })
            @Html.FormCustomizeControl(new FormControllerModel() { FieldID = 11742, FormField = new Base.Model.Sys.Model.FormFieldModel() { }, ID = ID, ClassName = "" })
        </div>
    </td>
}
@section scripts{
    <script src="~/Content/base/js/area.js"></script>
    <script type="text/javascript">
        $(function () {
            area.init({
                ProvinceFieldName: "ProvinceID",
                CityFieldName: "CityID",
                AreaFieldName: "AreaID",
            });
            layoutform.fn_beforeSend = function () {

            }
        });
    </script>
}
